from tkinter import *
root = Tk()
canvas_width = 800
canvas_height = 400

root.geometry(f"{canvas_width}x{canvas_height}")

root.title("canvasss")

can_widget = Canvas(root, width=canvas_width, height=canvas_height)

can_widget.pack()


can_widget.create_polygon(0, 100, 300, 0, 100, 200, fill="red")

can_widget.create_window(200, 0)

root.mainloop()